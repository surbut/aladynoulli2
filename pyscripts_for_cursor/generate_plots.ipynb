# Function to load model and data
def load_model_from_checkpoint(output_dir):
    """
    Load model from checkpoint following the approach in the notebook
    """
    # Load model essentials first (similar to your notebook approach)
    base_path = os.path.join(output_dir, '')
    model_path = os.path.join(base_path, 'model.pt')
    essentials_path = os.path.join(base_path, 'model_essentials.pt')
    
    # Check if files exist
    if not os.path.exists(model_path) or not os.path.exists(essentials_path):
        print(f"Model files not found in {output_dir}")
        return None, None, None, None
    
    # Load essentials
    essentials = torch.load(essentials_path)
    
    # Extract Y, E, G from essentials
    Y = essentials.get('Y', None)
    E = essentials.get('E', None)
    G = essentials.get('G', None)
    
    # Load checkpoint
    checkpoint = torch.load(model_path)
    
    print(f"Loaded checkpoint from {model_path}")
    return checkpoint, Y, E, G, essentials

# Function to reconstruct model from checkpoint
def reconstruct_model(checkpoint, Y, G, essentials):
    """
    Reconstruct the model from checkpoint using the approach in your notebook
    """
    # Set seeds for reproducibility
    torch.manual_seed(7)
    np.random.seed(4)
    
    # Create model
    model = AladynSurvivalFixedKernelsAvgLoss_clust_logitInit_psitest(
        N=Y.shape[0], 
        D=Y.shape[1], 
        T=Y.shape[2], 
        K=20,  # Assuming K=20 from your code
        P=G.shape[1],
        init_sd_scaler=1e-1,
        G=G, 
        Y=Y,
        genetic_scale=1,
        W=0.0001,
        R=0,
        prevalence_t=essentials['prevalence_t'],
        signature_references=essentials.get('signature_refs', None),
        healthy_reference=True,
        disease_names=essentials['disease_names']
    )
    
    # Load state dict from checkpoint
    model.load_state_dict(checkpoint['model_state_dict'])
    
    # Set to eval mode for inference
    model.eval()
    
    print("Model successfully reconstructed")
    return model

